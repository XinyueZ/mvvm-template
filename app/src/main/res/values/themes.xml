<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="SplashThemeBase" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorSplashPrimary</item>
        <item name="colorPrimaryDark">@color/colorSplashPrimary</item>
        <item name="colorAccent">@color/colorSplashPrimary</item>
    </style>

    <style name="SplashTheme" parent="SplashThemeBase"/>

    <style name="HomeTheme" parent="AppTheme"/>
</resources>