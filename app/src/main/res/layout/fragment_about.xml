<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.template.mvvm.about.AboutViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:goBack="@{vm.goBack}">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Toolbar"
            app:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:onIndicatorClick="@{ vm::toggleBack }"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@{safeUnbox(vm.title)}"/>


        <android.support.v7.widget.CardView
            android:id="@+id/version"
            style="@style/RecyclerViewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionGroup="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/versionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@{vm.versionTitle}"
                    android:textAppearance="@style/MaterialTextView.LightTheme.Headline"
                    tools:text="Version"/>

                <TextView
                    android:id="@+id/versionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.versionContent}"
                    android:textAppearance="@style/MaterialTextView.LightTheme.Body.Regular"
                    tools:text=" v0.2"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/description"
            style="@style/RecyclerViewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionGroup="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/version"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descriptionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@{vm.descriptionTitle}"
                    android:textAppearance="@style/MaterialTextView.LightTheme.Headline"
                    tools:text="Description"/>

                <TextView
                    android:id="@+id/descriptionContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.descriptionContent}"
                    android:textAppearance="@style/MaterialTextView.LightTheme.Body.Regular"
                    tools:text="Hi this is in development"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</layout>