<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.template.mvvm.app.R"/>

        <import type="com.template.mvvm.base.ext.android.view.ViewExtKt"/>

        <import type="android.app.Activity"/>

        <variable
            name="vm"
            type="com.template.mvvm.core.models.product.ProductItemViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        style="@style/RecyclerViewCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:command="@{(a, b) -> vm.onCommand(a, thumnailIv)}"
        app:height="@{ViewExtKt.getUpGoldenRatioInvertedHeight(card, (Activity)context)}"
        app:vm="@{vm}"
        app:width="@{ViewExtKt.getUpGoldenRatioWidth(card, (Activity)context)}">


        <ImageView
            android:id="@+id/thumnailIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:contentDescription="@null"
            app:errorDrawableRes="@{R.drawable.ic_image}"
            app:placeholderRes="@{R.drawable.ic_image}"
            app:remoteImageUri="@{vm.thumbnail}"/>


    </android.support.v7.widget.CardView>
</layout>
