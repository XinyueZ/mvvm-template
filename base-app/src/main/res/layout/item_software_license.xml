<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.template.mvvm.core.models.license.SoftwareLicenseItemViewModel"/>
    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        style="@style/RecyclerViewCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:command="@{(a, b) -> vm.onCommand(a, b)}"
        app:vm="@{vm}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:text="@{vm.title}"
                android:textAppearance="@style/MaterialTextView.LightTheme.Title"
                android:textColor="@color/material_black"
                tools:text="title"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:text="@{vm.description}"
                android:textAppearance="@style/MaterialTextView.LightTheme.Caption"
                android:textColor="@color/material_black"
                tools:text="description"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
