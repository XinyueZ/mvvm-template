<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.template.mvvm.app.R"/>


        <variable
            name="vm"
            type="com.template.mvvm.core.models.product.ProductsViewModel"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:reload="@{vm::onReload}"
            app:stopLoading="@{vm.state.dataHaveNotReloaded}">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:add="@{true}"
                app:delete="@{vm.state.deleteList}"
                app:itemLayout="@{R.layout.item_product}"
                app:itemList="@{vm.controller.collectionItemVmList}"
                app:layout="@{`linear`}"
                app:onListItemBound="@{vm::onBound}"
                />
        </android.support.v4.widget.SwipeRefreshLayout>

        <include
            layout="@layout/layout_collection_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:dataLoaded="@{vm.state.dataLoaded}"/>


    </android.support.design.widget.CoordinatorLayout>
</layout>