<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/mainBackground</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="SplashThemeBase" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="SplashThemeBase"/>

    <style name="HomeThemeBase" parent="AppTheme"/>

    <style name="HomeTheme" parent="HomeThemeBase"/>

    <style name="ProductsThemeBase" parent="AppTheme"/>

    <style name="ProductsTheme" parent="ProductsThemeBase"/>

    <style name="AboutThemeBase" parent="AppTheme"/>

    <style name="AboutTheme" parent="AboutThemeBase"/>

    <style name="SoftwareLicensesThemeBase" parent="AppTheme"/>

    <style name="SoftwareLicensesTheme" parent="SoftwareLicensesThemeBase"/>


    <style name="ProductDetailThemeBase" parent="AppTheme"/>

    <style name="ProductDetailTheme" parent="ProductDetailThemeBase"/>


    <style name="DrawerNavigationViewTheme" parent="@style/Theme.AppCompat.Light">
        <item name="itemTextColor">@color/naviItemTextColor</item>
        <item name="itemIconTint">@color/naviMenuItemIconTint</item>
        <item name="itemBackground">@color/naviDrawerBackground</item>
        <item name="android:background">@color/naviDrawerBackground</item>
    </style>

    <style name="BottomNavigationViewTheme" parent="@style/Theme.AppCompat.Light">
        <item name="itemTextColor">@color/selector_bottom_navi_tint</item>
        <item name="itemIconTint">@color/selector_bottom_navi_tint</item>
        <item name="itemBackground">@color/naviBottomItemBackground</item>
        <item name="android:background">@color/naviBottomBackground</item>
    </style>
</resources>