<resources>

    <style name="ToolbarBase" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">@dimen/material_elevation_toolbar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="Toolbar" parent="@style/ToolbarBase">
        <item name="android:background">?attr/colorPrimary</item>
    </style>


    <style name="Toolbar2" parent="@style/ToolbarBase">
    </style>

    <style name="CollectionProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/material_margin_content</item>
        <item name="android:layout_marginEnd">@dimen/collection_progress_bar_margin</item>
        <item name="android:layout_marginLeft">@dimen/collection_progress_bar_margin</item>
        <item name="android:layout_marginRight">@dimen/collection_progress_bar_margin</item>
        <item name="android:layout_marginStart">@dimen/collection_progress_bar_margin</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="CircleProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/circle_loading</item>
        <item name="android:layout_height">@dimen/circle_loading</item>
        <item name="android:indeterminate">true</item>
    </style>


    <style name="RecyclerViewCardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginStart">@dimen/material_margin_content</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_content</item>
        <item name="android:layout_marginLeft">@dimen/material_margin_content</item>
        <item name="android:layout_marginRight">@dimen/material_margin_content</item>
        <item name="cardBackgroundColor">@color/material_white</item>
        <item name="contentPadding">@dimen/material_margin_content</item>
        <item name="cardElevation">@dimen/material_elevation_card</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">1dp</item>
    </style>
</resources>
